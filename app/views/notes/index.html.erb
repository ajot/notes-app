<div class="max-w-4xl mx-auto p-6">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-900">My Notes</h1>
    <%= link_to "New Note", new_note_path, class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md font-medium" %>
  </div>

  <% if @notes.any? %>
    <div class="grid gap-4">
      <% @notes.each do |note| %>
        <div class="bg-white shadow rounded-lg p-6 border">
          <h3 class="text-xl font-semibold text-gray-900 mb-2">
            <%= link_to note.title, note, class: "text-blue-600 hover:text-blue-800" %>
          </h3>
          <p class="text-gray-600 mb-4"><%= truncate(note.content, length: 150) %></p>
          <div class="flex space-x-4 text-sm text-gray-500">
            <span>Created: <%= note.created_at.strftime("%B %d, %Y") %></span>
            <div class="flex space-x-2">
              <%= link_to "Edit", edit_note_path(note), class: "text-blue-600 hover:text-blue-800" %>
              <%= link_to "Delete", note, data: { "turbo-method": :delete, "turbo-confirm": "Are you sure?" }, class: "text-red-600 hover:text-red-800" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-12">
      <h3 class="text-lg font-medium text-gray-900 mb-2">No notes yet</h3>
      <p class="text-gray-600 mb-4">Get started by creating your first note!</p>
      <%= link_to "Create Note", new_note_path, class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md font-medium" %>
    </div>
  <% end %>
</div>
