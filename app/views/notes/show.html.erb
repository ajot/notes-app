<div class="max-w-4xl mx-auto p-6">
  <div class="mb-6">
    <%= link_to "← Back to Notes", notes_path, class: "text-blue-600 hover:text-blue-800 font-medium" %>
  </div>

  <article class="bg-white shadow rounded-lg overflow-hidden">
    <div class="p-6">
      <header class="mb-6">
        <h1 class="text-3xl font-bold text-gray-900 mb-2"><%= @note.title %></h1>
        <div class="text-sm text-gray-500">
          Created on <%= @note.created_at.strftime("%B %d, %Y at %I:%M %p") %>
          <% if @note.updated_at != @note.created_at %>
            • Updated on <%= @note.updated_at.strftime("%B %d, %Y at %I:%M %p") %>
          <% end %>
        </div>
      </header>

      <div class="prose max-w-none">
        <%= simple_format(@note.content, class: "text-gray-700 leading-relaxed") %>
      </div>
    </div>

    <div class="px-6 py-4 bg-gray-50 border-t border-gray-200">
      <div class="flex space-x-4">
        <%= link_to "Edit", edit_note_path(@note), class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md font-medium" %>
        <%= link_to "Delete", @note, data: { "turbo-method": :delete, "turbo-confirm": "Are you sure you want to delete this note?" }, class: "bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-md font-medium" %>
      </div>
    </div>
  </article>
</div>
